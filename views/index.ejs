    }
</script>

<body>
    <div id="__app">
        <form id="Addform" method="post" action="/AddFruits">
            <input placeholder="Name" type="text" name="name">
            <input placeholder="Rating" type="number" name="rating">
            <input placeholder="Review" type="text" name="review">
            <button type="submit">Add Fruits</button>
        </form>
        <div id="grid">
            <% for(var i=0;i<AllFruits.length;i++){ %>
                <div id="card">
                    <div>Name:<%= AllFruits[i].name %>
                    </div>
                    <div>Rating:<%= AllFruits[i].rating %>
                    </div>
                    <div>Review:<%= AllFruits[i].review %>
                    </div>
                    <div id="buttons">
                        <form method="post" action="/DeleteFruits">
                            <input type="text" name="DeleteId" value="<%= AllFruits[i].id %>">
                            <button type="submit">Delete</button>
                        </form>
                        <form method="post" action="/UpdateFruits">
                            <input type="text" value="<%= AllFruits[i].id %>" >
                            <button type="submit">Update</button>
                        </form>
                    </div>
                </div>

                <% } %>
        </div>
    </div>
</body>

</html>